{% extends ':default:admin.html.twig' %}

{% block title -%}
    {{ "crud.publicite.title.master_title"|trans }}
{% endblock %}

{% block content -%}
   <div class="row">
       <div class="col-md-12">

           <div class="box">
               <div class="box-header">
                   <h3 class="box-title">{{ "crud.publicite.title.list"|trans }}</h3>

               </div><!-- /.box-header -->
               <div class="box-body">
                   <div id="example2_wrapper" class="dataTables_wrapper form-inline" role="grid">
                       <div class="row">
                           <div class="col-xs-6"></div>
                           <div class="col-xs-6">                                   {% if app.user|id2i_secure_can('publicite','back','add') == true %}
                                       <a class="btn btn-success fa fa-plus pull-right" href="{{ path('tools_publicite_new') }}">
                                           {{ 'crud.publicite.btn.new'|trans }}
                                       </a>
                                   {% endif %}


                               <br/><br/>                           </div>
                       </div>
                       <table id="table_Publicite" class="table table-bordered table-hover dataTable" aria-describedby="table_publicite_info">
                           <thead>
                           <tr>
                                  <th>{{ "crud.publicite.field.id.libelle"|trans }}</th>
                                  <th>{{ "crud.publicite.field.titre.libelle"|trans }}</th>
                                  <th>{{ "crud.publicite.field.urlcible.libelle"|trans }}</th>
                                  <th>{{ "crud.publicite.field.script.libelle"|trans }}</th>
                                  <th>{{ "crud.publicite.field.attrtarget.libelle"|trans }}</th>
                                  <th>{{ "crud.publicite.field.attrtitle.libelle"|trans }}</th>
                                  <th>{{ "crud.publicite.field.active.libelle"|trans }}</th>                               <th>{{ "crud.publicite.lastTh"|trans }}</th>
                           </tr>
                           </thead>
                           <tbody>
                           {% for entity in entities %}
                           <tr>
                                      <td>{{ entity.id }}</td>
                                      <td>{{ entity.titre }}</td>
                                      <td>{{ entity.urlCible }}</td>
                                      <td>{{ entity.script }}</td>
                                      <td>{{ entity.attrTarget }}</td>
                                      <td>{{ entity.attrTitle }}</td>
                                      <td>{% if entity.active == 1 %}{{ "crud.publicite.field.active._true"|trans }}{% else %}{{ "crud.publicite.field.active._false"|trans }}{% endif %}</td>                                      <td>        {% if app.user|id2i_secure_can('publicite','back','edit') == true %}
        <a  class="btn btn-info fa fa-edit" href="{{ path('tools_publicite_edit', { 'id': entity.id }) }}" title="{{ "crud.publicite.btn.edit"|trans }}"></a>
        {% endif %}        {% if app.user|id2i_secure_can('publicite','back','delete') == true %}
        <a  class="btn btn-danger fa fa-trash confirm-delete" href="{{ path('tools_publicite_delete', { 'id': entity.id }) }}" title="{{ "crud.publicite.btn.delete"|trans }}"></a>
        {% endif %}
</td>                           </tr>
                           {% endfor %}
                           </tbody>
                       </table>
               </div>
           </div>
       </div>
   </div>
{% endblock %}
