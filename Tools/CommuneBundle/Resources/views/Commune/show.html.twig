{% extends 'ThemeBundle:Default:admin.html.twig' %}

    {% block header -%}
    {{ parent() }}
    {% endblock %}
    {% block content -%}

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Codepostal</th>
                <td>{{ entity.codePostal }}</td>
            </tr>
            <tr>
                <th>Zone</th>
                <td>{{ entity.zone }}</td>
            </tr>
        </tbody>
    </table>


    <li>
        <a href="{{ path('commune_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
