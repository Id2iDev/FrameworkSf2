{% extends 'ThemeBundle:Default:admin.html.twig' %}

{% block title -%}
    {{ "crud.commune.title.master_title"|trans }}
{% endblock %}

{% block content -%}
   <div class="row">
       <div class="col-md-12">

           <div class="box">
               <div class="box-header">
                   <h3 class="box-title">{{ "crud.commune.title.list"|trans }}</h3>

               </div><!-- /.box-header -->
               <div class="box-body">
                   <div id="example2_wrapper" class="dataTables_wrapper form-inline" role="grid">
                       <div class="row">
                           <div class="col-xs-6"></div>
                           <div class="col-xs-6">                                   {% if app.user|id2i_secure_can('commune','back','add') == true %}
                                       <a class="btn btn-success fa fa-plus pull-right" href="{{ path('commune_new') }}">
                                           {{ 'crud.commune.btn.new'|trans }}
                                       </a>
                                   {% endif %}


                               <br/><br/>                           </div>
                       </div>
                       <table id="table_Commune" class="table table-bordered table-hover dataTable" aria-describedby="table_commune_info">
                           <thead>
                           <tr>
                                  <th>{{ "crud.commune.field.id.libelle"|trans }}</th>
                                  <th>{{ "crud.commune.field.nom.libelle"|trans }}</th>
                                  <th>{{ "crud.commune.field.codepostal.libelle"|trans }}</th>
                                  <th>{{ "crud.commune.field.zone.libelle"|trans }}</th>                               <th>{{ "crud.commune.lastTh"|trans }}</th>
                           </tr>
                           </thead>
                           <tbody>
                           {% for entity in entities %}
                           <tr>
                                      <td>{{ entity.id }}</td>
                                      <td>{{ entity.nom }}</td>
                                      <td>{{ entity.codePostal }}</td>
                                      <td>{{ entity.zone }}</td>                                      <td>        {% if app.user|id2i_secure_can('commune','back','edit') == true %}
        <a  class="btn btn-info fa fa-edit" href="{{ path('commune_edit', { 'id': entity.id }) }}" title="{{ "crud.commune.btn.edit"|trans }}"></a>
        {% endif %}        {% if app.user|id2i_secure_can('commune','back','delete') == true %}
        <a  class="btn btn-danger fa fa-trash confirm-delete" href="{{ path('commune_delete', { 'id': entity.id }) }}" title="{{ "crud.commune.btn.delete"|trans }}"></a>
        {% endif %}
</td>                           </tr>
                           {% endfor %}
                           </tbody>
                       </table>
               </div>
           </div>
       </div>
   </div>
{% endblock %}
