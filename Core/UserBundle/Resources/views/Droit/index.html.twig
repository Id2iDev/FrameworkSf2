{% extends ':default:admin.html.twig' %}

{% block title -%}
    {{ "crud.droit.title.master_title"|trans }}
{% endblock %}

{% block content -%}
   <div class="row">
       <div class="col-md-12">

           <div class="box">
               <div class="box-header">
                   <h3 class="box-title">{{ "crud.droit.title.list"|trans }}</h3>

               </div><!-- /.box-header -->
               <div class="box-body">
                   <div id="example2_wrapper" class="dataTables_wrapper form-inline" role="grid">
                       <div class="row">
                           <div class="col-xs-6"></div>
                           <div class="col-xs-6">                               <a class="btn btn-success fa fa-plus pull-right" href="{{ path('superadmin_droits_new') }}">
                                   {{ 'crud.droit.btn.new'|trans }}
                               </a>
                               <br/><br/>                           </div>
                       </div>
                       <table id="table_Droit" class="table table-bordered table-hover dataTable" aria-describedby="table_droit_info">
                           <thead>
                           <tr>
                               <th>{{ "crud.droit.field.id.libelle"|trans }}</th>
                               <th>{{ "crud.droit.field.bundle.libelle"|trans }}</th>

                               <th>{{ "crud.droit.lastTh"|trans }}</th>
                           </tr>
                           </thead>
                           <tbody>
                           {% for entity in entities %}
                           <tr>
                                      <td>{{ entity.id }}</td>
                                      <td>{{ entity.bundle|trans }}</td>
                               <td>
       <a  class="btn btn-info fa fa-edit" href="{{ path('superadmin_droits_edit', { 'id': entity.id }) }}" title="{{ "crud.droit.btn.edit"|trans }}"></a>
       <a  class="btn btn-danger fa fa-trash confirm-delete" href="{{ path('superadmin_droits_delete', { 'id': entity.id }) }}" title="{{ "crud.droit.btn.delete"|trans }}"></a>
</td>                           </tr>
                           {% endfor %}
                           </tbody>
                       </table>
               </div>
           </div>
       </div>
   </div>
{% endblock %}
