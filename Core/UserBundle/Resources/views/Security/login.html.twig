{% extends "FOSUserBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset("/bundles/user/css/login.css") }}"  rel="stylesheet" />
{% endblock %}



{% block title %}{{ parent() }} - Connexion utilisateur{% endblock %}

{% block content %}

{% if error %}
    <div class="col-md-4 col-md-offset-4 ">{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<div class="col-md-4 col-md-offset-4 margin-top-20">
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-vertical">
        <div class="panel panel-primary">
            <div class="panel-heading">{{ "security.login.title"|trans }}</div>
            <div class="panel-body">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <label for="username" class="control-label">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
                <div class="form-group" >
                    <label for="password" class=" control-label">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="password" class="form-control" id="password" name="_password" required="required" />
                </div>
                <div class="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me" class="control-label">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                </div>
            </div>
            <div class="panel-footer clearfix">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary pull-right"/>
            </div>
        </div>
    </form>
</div>
        {% endblock %}
