{% extends 'ThemeBundle:Default:admin.html.twig' %}

{% block title -%}
    {{ "crud.media.title.master_title"|trans }}
{% endblock %}

{% block content -%}
<div class="row">
    <div class="col-md-12">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ "crud.media.title.list"|trans }}</h3>

            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div id="example2_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <div class="row">
                        <div class="col-xs-6"></div>
                        <div class="col-xs-6"><a class="btn btn-success fa fa-plus pull-right"
                                                 href="{{ path('superadmin_media_new') }}">
                                {{ 'crud.media.btn.new'|trans }}
                            </a>
                            <br/><br/></div>
                    </div>
                    <table id="table_Media" class="table table-bordered table-hover dataTable"
                           aria-describedby="table_media_info">
                        <thead>
                        <tr>
                            <th>{{ "crud.media.field.id.libelle"|trans }}</th>
                            <th>{{ "crud.media.field.createdat.libelle"|trans }}</th>
                            <th>{{ "crud.media.field.originalname.libelle"|trans }}</th>
                            <th>{{ "crud.media.field.commentaire.libelle"|trans }}</th>
                            <th>{{ "crud.media.lastTh"|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.id }}</td>
                                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{{ entity.originalName }}</td>
                                <td>{{ entity.commentaire }}</td>
                                <td>
                                    <a class="btn btn-info fa fa-edit"
                                       href="{{ path('superadmin_media_edit', { 'id': entity.id }) }}"
                                       title="{{ "crud.media.btn.edit"|trans }}"></a>
                                    <a class="btn btn-danger fa fa-trash confirm-delete"
                                       href="{{ path('superadmin_media_delete', { 'id': entity.id }) }}"
                                       title="{{ "crud.media.btn.delete"|trans }}"></a>
                                    <a href="{{ asset(entity.path) }}" target="_blank" class="btn btn-default fa fa-eye">
                                        voir</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
