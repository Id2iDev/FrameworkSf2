{% extends 'ThemeBundle:Default:admin.html.twig' %}

    {% block title -%}
        {{ "crud.page.title.master_title"|trans }}
    {% endblock %}
    {% block header -%}
        {{ parent() }}
        <ol class="breadcrumb">
            <li>
                <a class="btn btn-default" href="{{ path('gestion_page') }}">
                    {{ "crud.page.btn.back"|trans }}
                </a>
            </li>
        </ol>
    {% endblock %}

    {% block content -%}

<form action="{{ url("gestion_page_create") }}" method="post" class="form-vertical">
    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">{{ "crud.page.title.create"|trans }}</h3>
                </div>
                <div class="box-body clearfix">
                    <div class="form-group">
                        {{ form_label(form.title) }}
                        <div class="col-md-12">
                            {{ form_errors(form.title) }}
                            {{ form_widget(form.title,{'attr':{'placeholder':("crud.page.field.title.libelle"|trans)}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.resume) }}

                        <div class="col-md-12">
                            {{ form_errors(form.resume) }}
                            {{ form_widget(form.resume,{'attr':{'placeholder':("crud.page.field.resume.libelle"|trans)}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.contenu) }}
                        <div class="col-md-12">
                            {{ form_errors(form.contenu) }}

                            {{ form_widget(form.contenu,{'attr':{'class':'' ,'placeholder':("crud.page.field.contenu.libelle"|trans)}}) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">{{ "crud.page.title.informations"|trans }}</h3>
                </div>
                <div class="box-body clearfix">
                    <label>{{ "crud.page.field.auteur.libelle"|trans }} : </label>
                    {{ app.user.username }}<br/>

                    <label>{{ "crud.page.field.node.libelle"|trans }} : </label>
                    {{ form_widget(form.node) }}
                    {{ form_errors(form.node) }}


                    <div class="form-group">
                        <label>{{ "crud.page.field.publiedat.libelle"|trans }} : </label>
                        {{ form_widget(form.publiedAt) }}
                        {{ form_errors(form.publiedAt) }}

                    </div>
                    {{ form_widget(form.active) }}
                    {% if app.user|id2i_secure_can('page','back','validate') == true %}
                        <button type="submit" name="id2i_core_pagebundle_page_etat" value="3" class="btn btn-success">
                            {{ "crud.page.field.etat.valider"|trans }}
                        </button>
                    {% else %}
                        <button type="submit" name="id2i_core_pagebundle_page_etat" value="2" class="btn btn-success">
                            {{ "crud.page.field.etat.demande_valider"|trans }}
                        </button>
                    {% endif %}
                    <button type="submit" name="id2i_core_pagebundle_page_etat" value="1" class="btn btn-default">
                        {{ "crud.page.field.etat.brouillon"|trans }}
                    </button>

                </div>
            </div>
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">{{ "crud.page.title.seo"|trans }}</h3>
                </div>
                <div class="box-body">

                    {{ form_widget(form.seoTitle,{'attr':{'placeholder':("crud.page.field.seotitle.libelle"|trans)}}) }}
                    {{ form_widget(form.seoDescription,{'attr':{'placeholder':("crud.page.field.seodescription.libelle"|trans)}}) }}
                    {{ form_widget(form.seoKeywords,{'attr':{'placeholder':("crud.page.field.seokeywords.libelle"|trans)}}) }}
                    {{ form_widget(form.seoUrl,{'attr':{'placeholder':("crud.page.field.seourl.libelle"|trans)}}) }}

                </div>
            </div>
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">{{ "crud.page.title.right"|trans }}</h3>
                </div>
                <div class="box-body">
                    {{ form_widget(form.groups,{'attr':{'placeholder':("crud.page.field.groups.libelle"|trans)}}) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    </ul>
    {% endblock %}
    {% block javascripts %}
    {{ parent() }}
    <script>

    </script>
{% endblock %}